/* pages/qrcode/qrcode.wxss */
#qrcode-container{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.canvas {
    width: 200px;
    height: 200px;
}
#qrcode{
  display: flex;
}
#qrcode-title{
width: 100vw;
height: 2.5em;
line-height: 2.5em;
font-size: 1.2em;
color: #FFF;
background-color: #e03636;
text-align: center;
display: block;
font-weight: bold;
}
#qrcode-caption{
width: 100vw;
height: 3em;
line-height: 3em;
color: #e03636;
background-color: #fff;
border-top: 1px #e03636 dashed;
text-align: center;
display: block;
}