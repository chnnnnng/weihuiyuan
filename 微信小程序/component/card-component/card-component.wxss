.card{
  width: 96vw;
  height: 32vw;
  border-radius: 10px;
  box-shadow: 2px 3px 5px #888888;
  margin: 2vw;
  margin-bottom: 4vw;
  position: relative;
  text-align: center;
}
.card .card-date,.card .card-number,.card .card-type{
  color: #FFF;
}
.card-type-3{
  background-color: #f7a278;
}
.card-type-3 .card-name{
  color: #f7a278;
}
.card-type-1{
  background-color: #7bbfea;
}
.card-type-1 .card-name{
  color: #7bbfea;
}
.card-type-2{
  background-color: #73c09c;
}
.card-type-2 .card-name{
  color: #73c09c;
}
.card-type-0{
  background-color: #fb7c85;
}
.card-type-0 .card-name{
  color: #fb7c85;
}

.card-number{
  position: absolute;
  line-height: 9vw;
  top: 0;
  left: 4vw;
  color: #153e6c
}
.card-name{
  position: absolute;
  top: 9vw;
  left: 0;
  width: 100%;
  height: 14vw;
  line-height: 14vw;
  font-size: 1.3em;
  font-weight: bold;
  background-color: #FFF;
}
.card-date{
  position: absolute;
  top: 23vw;
  left: 4vw;
  line-height: 9vw;
}
.card-type{
  position: absolute;
  top: 23vw;
  right: 4vw;
  line-height: 9vw;
}